@model IEnumerable<moviemall.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    string controllerName = @HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
}
<h2>@controllerName</h2>

@Html.ActionLink("New Movies", "New", "Movies",null ,new { @class= "btn btn-primary btn-large" })


<table class="table table-bordered table-hover ">
    <thead>
        <tr>
            <th>
                @controllerName
            </th>
            <th>
                Genre
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
        <tr>
            <td>
               @* @Html.ActionLink(m.Name, "Details", "Movies",new { Id = m.Id },null)*@
                @Html.ActionLink(m.Name, "Edit", "Movies", new { Id = m.Id }, null)
            </td>
            <td>
                @m.MovieGenre.GenreName
            </td>
        </tr>
        }
    </tbody>
</table>



